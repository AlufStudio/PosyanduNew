<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/app.rama.posyandu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.rama.posyandu.Dashboard" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/image_menu_atas"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2791d0"
        android:paddingLeft="27dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/potoPropils"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/photo"
                app:border="true"
                app:border_color="#eeeeee"
                app:border_width="1dp"
                app:shadow="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtSubNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelayanan, Tips, Info, Kegiatan yang ada pada Posyandu"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btnTips"
                android:layout_width="119dp"
                android:layout_height="109dp"
                android:src="@drawable/btn_tips" />

            <ImageButton
                android:id="@+id/btnKalkulator"
                android:layout_width="119dp"
                android:layout_height="109dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/btn_kalkulator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btnJadwal"
                android:layout_width="119dp"
                android:layout_height="109dp"
                android:src="@drawable/btn_jadwal" />

            <ImageButton
                android:id="@+id/btnKMS"
                android:layout_width="119dp"
                android:layout_height="109dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/btn_kms" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btnBantuan"
                android:layout_width="94dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_bantuan" />

            <ImageButton
                android:id="@+id/btnAbout"
                android:layout_width="94dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_about" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>