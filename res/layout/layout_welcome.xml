<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <ImageView
        android:id="@+id/imgNya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSlide"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_marginTop="14dp"
        android:background="@drawable/bullet1" />

    <TextView
        android:id="@+id/textSlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnClose"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="- Untuk memastikan Peningkatan Gizi pada si Balita dan Ibu yang lagi menyusui -"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="#aed13a"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="Mulai"
        android:textColor="#ffffff"
        android:visibility="invisible" />
 
</RelativeLayout>